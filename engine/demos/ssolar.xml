<world>
    <window width="800" height="800" />
    <camera>
        <position x="-80" y="20" z="0" />
        <lookAt x="0" y="0" z="0" />
        <up x="-1" y="1" z="0" />
        <projection fov="60" near="1" far="1000" />
    </camera>
    <group>
        <transform>
            <rotate angle="100" x="0" y="1" z="0" />
        </transform>
        <!-- Sun -->
        <group>
            <transform>
                <scale x="1.5" y="1.5" z="1.5" />
            </transform>
            <models>
                <model file="sphere.3d"/>
            </models>
        </group>
        <group>
            <transform>
                <scale x="1" y="1" z="1" />
            </transform>
        </group>
        <!-- Mercury -->
        <group>
