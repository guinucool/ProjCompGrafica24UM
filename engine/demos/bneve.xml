<world>
    <window width="800" height="800" />
    <camera>
        <position x="-40" y="20" z="0" />
        <lookAt x="0" y="0" z="0" />
        <up x="-1" y="1" z="0" />
        <projection fov="60" near="1" far="1000" />
    </camera>
    <group>
        <transform>
            <rotate angle="-150" x="0" y="1" z="0" />
        </transform>
        <!-- Bottom Snowball -->
        <group>
            <transform>
                <translate x="0" y="-4" z="0" />
                <scale x="1.5" y="1.5" z="1.5" />
            </transform>
            <models>
                <model file="sphere.3d"/>
            </models>
        </group>
        <!-- Middle Snowball -->
        <group>
            <transform>
                <translate x="0" y="2" z="0" />
                <scale x="1.2" y="1.2" z="1.2" />
            </transform>
            <models>
                <model file="sphere.3d"/>
            </models>
        </group>
        <!-- Top Snowball (Head) -->
        <group>
            <transform>
                <translate x="0" y="7" z="0" />
                <scale x="0.8" y="0.8" z="0.8" />
            </transform>
            <models>
                <model file="sphere.3d"/>
            </models>
            <!-- Nose (Cone) -->
            <group>
                <transform>
                    <translate x="0" y="0" z="3" />
                    <rotate angle="90" x="1" y="0" z="0" />
                    <scale x="0.1" y="0.1" z="0.1" />
                </transform>
                <models>
                    <model file="cone.3d"/>
                </models>
            </group>
            <!-- Eyes -->
            <group>
                <transform>
                    <translate x="0.7" y="1.5" z="2.7" />
                    <scale x="0.1" y="0.1" z="0.1" />
                </transform>
                <models>
                    <model file="sphere.3d"/>
                </models>
            </group>
            <group>
                <transform>
                    <translate x="-0.7" y="1.5" z="2.7" />
                    <scale x="0.1" y="0.1" z="0.1" />
                </transform>
                <models>
                    <model file="sphere.3d"/>
                </models>
            </group>
        </group>
    </group>
</world>
